import time
from datetime import datetime
import os

# ğŸ—“ï¸ è¨­å®šè€ƒè©¦æ—¥æœŸï¼ˆè«‹è‡ªè¡Œä¿®æ”¹å¹´æœˆæ—¥ï¼‰
exam_date = datetime(2028, 6, 15, 9, 0, 0)  # ä¾‹å¦‚ï¼šæ°‘åœ‹117å¹´ = è¥¿å…ƒ2028å¹´

while True:
    # å–å¾—ç¾åœ¨æ™‚é–“
    now = datetime.now()

    # è¨ˆç®—å‰©é¤˜æ™‚é–“
    diff = exam_date - now
    days = diff.days
    hours = diff.seconds // 3600
    minutes = (diff.seconds % 3600) // 60
    seconds = diff.seconds % 60

    # æ¸…ç©ºç•«é¢ï¼ˆWindowsç”¨ clsï¼ŒMac/Linux ç”¨ clearï¼‰
    os.system('cls' if os.name == 'nt' else 'clear')

    print("ğŸ“˜ é›„ç§‘ç­è€ƒè©¦å€’æ•¸è¨ˆæ™‚ ğŸ“˜")
    print(f"å‰©é¤˜ {days} å¤© {hours:02d} å°æ™‚ {minutes:02d} åˆ† {seconds:02d} ç§’")
    print()
    print("è˜è˜å­¸å­ï¼Œç§‘ç­åŠ æ²¹ï¼ğŸ’ª")

    # ç­‰å¾… 3 ç§’å†æ¸…ç©º
    time.sleep(3)
    os.system('cls' if os.name == 'nt' else 'clear')

    print("ç»çµ¦117å¹´è€ƒé›„ç§‘çš„è‡ªå·± âœ¨")
    time.sleep(2)
