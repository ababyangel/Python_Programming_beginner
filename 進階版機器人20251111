import time
A=input("請幫聊天對象取名:")
time.sleep(1)
print(A,":hello,how are you?")
B=input("請輸入回應(good或bad):")
if B=='good':
    time.sleep(1)
    print(A,":nice to hear that!")
elif B=='bad':
    time.sleep(1)
    print(A,":I am sorry to hear that!")
time.sleep(1)
print("what is your name? My name is ",A)
C=input("請輸入英文名字:")
time.sleep(1)
print(A,":nice to meet you, ",C)
